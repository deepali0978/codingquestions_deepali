#include <bits/stdc++.h>
  using namespace std;
  
  bool sorting(int a,int b){
if(a>b){
return true;
}
else{
return false;
}
}
int main(){
int t;
cin>>t;
while(t--){
int n;
cin>>n;
int arr[n];
for(int i=0;i<n;i++){
cin>>arr[i];
}
sort(arr,arr+n,sorting);
int sum=0;
for(int i=0;i<n;i=i+2){
sum+=arr[i];
}
cout<<sum<<endl;
}
}
